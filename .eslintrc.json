{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "globals": {
    "SpreadsheetApp": "readonly",
    "ScriptApp": "readonly",
    "ContentService": "readonly",
    "HtmlService": "readonly",
    "CacheService": "readonly",
    "Utilities": "readonly",
    "FormApp": "readonly",
    "google": "readonly",
    "Logger": "readonly",
    "Session": "readonly",
    "UrlFetchApp": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "warn",
    "semi": ["warn", "always"],
    "quotes": "off",
    "no-var": "warn"
  },
  "overrides": [
    {
      "files": ["*.gs"],
      "parserOptions": {
        "sourceType": "script"
      }
    },
    {
      "files": ["Code.gs"],
      "globals": {
        "ZEB": "readonly",
        "TENANTS": "readonly",
        "TEMPLATES": "readonly",
        "FORM_TEMPLATES": "readonly",
        "loadTenants_": "readonly",
        "findTenant_": "readonly",
        "findTenantByHost_": "readonly",
        "findTemplate_": "readonly",
        "findFormTemplate_": "readonly",
        "listFormTemplates_": "readonly"
      }
    },
    {
      "files": ["tests/**/*.js"],
      "env": {
        "jest": true
      },
      "globals": {
        "test": "readonly",
        "expect": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "beforeAll": "readonly",
        "afterAll": "readonly"
      }
    },
    {
      "files": ["tests/e2e/**/*.js"],
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["*.html"],
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "dist/",
    "build/",
    "playwright-report/"
  ]
}
