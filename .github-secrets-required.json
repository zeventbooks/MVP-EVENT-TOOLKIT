{
  "$comment": "Standardized naming convention: STAGING_* and PROD_* prefixes",
  "required": [
    {
      "name": "OAUTH_CREDENTIALS",
      "description": "Contents of ~/.clasprc.json for clasp authentication"
    },
    {
      "name": "PROD_DEPLOYMENT_ID",
      "description": "Production Apps Script deployment ID (AKfycb...)"
    },
    {
      "name": "PROD_SCRIPT_ID",
      "description": "Production Apps Script project ID (permanent)"
    },
    {
      "name": "STAGING_SCRIPT_ID",
      "description": "Staging Apps Script project ID (permanent)"
    },
    {
      "name": "ADMIN_KEY_ROOT",
      "description": "Admin key for root brand"
    },
    {
      "name": "ADMIN_KEY_ABC",
      "description": "Admin key for ABC brand"
    },
    {
      "name": "ADMIN_KEY_CBC",
      "description": "Admin key for CBC brand"
    },
    {
      "name": "ADMIN_KEY_CBL",
      "description": "Admin key for CBL brand"
    },
    {
      "name": "SPREADSHEET_ID",
      "description": "Root spreadsheet ID (fallback)"
    },
    {
      "name": "SPREADSHEET_ID_ROOT",
      "description": "Root brand spreadsheet ID"
    },
    {
      "name": "SPREADSHEET_ID_ABC",
      "description": "ABC brand spreadsheet ID"
    },
    {
      "name": "SPREADSHEET_ID_CBC",
      "description": "CBC brand spreadsheet ID"
    },
    {
      "name": "SPREADSHEET_ID_CBL",
      "description": "CBL brand spreadsheet ID"
    },
    {
      "name": "GOOGLE_CLIENT_EMAIL",
      "description": "Story 1.1: Google Service Account email (e.g., worker@project.iam.gserviceaccount.com)",
      "story": "1.1",
      "setup": "docs/env/GOOGLE_SERVICE_ACCOUNT_SETUP.md"
    },
    {
      "name": "GOOGLE_PRIVATE_KEY",
      "description": "Story 1.1: Google Service Account private key (PEM format with BEGIN/END markers)",
      "story": "1.1",
      "setup": "docs/env/GOOGLE_SERVICE_ACCOUNT_SETUP.md"
    },
    {
      "name": "SHEETS_SPREADSHEET_ID_TEST",
      "description": "Story 1.1: Test spreadsheet ID for CI connectivity checks (dedicated sheet, not prod/staging data)",
      "story": "1.1",
      "setup": "docs/env/GOOGLE_SERVICE_ACCOUNT_SETUP.md"
    }
  ],
  "optional": [
    {
      "name": "CLOUDFLARE_API_TOKEN",
      "description": "Cloudflare API token for Worker deployments"
    },
    {
      "name": "CLOUDFLARE_ACCOUNT_ID",
      "description": "Cloudflare account ID"
    },
    {
      "name": "STAGING_DEPLOYMENT_ID",
      "description": "Staging Apps Script deployment ID (changes per deploy)"
    }
  ],
  "legacy": [
    {
      "name": "DEPLOYMENT_ID",
      "description": "Deprecated: Use PROD_DEPLOYMENT_ID instead"
    }
  ]
}
