{
  "name": "mvp-event-toolkit",
  "version": "1.3.0",
  "description": "Multi-tenant event management system with sponsor tracking and analytics (Zeventbook)",
  "main": "Code.gs",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:contract": "jest --testMatch='**/tests/contract/**/*.test.js'",
    "test:jest": "jest --coverage",
    "test:smoke": "playwright test tests/e2e/1-smoke/critical-smoke.spec.js --reporter=html --reporter=line",
    "test:security": "playwright test tests/e2e/1-smoke/security-smoke.spec.js --reporter=html --reporter=line",
    "test:api": "playwright test tests/e2e/1-smoke/api-contract.spec.js --reporter=html --reporter=line",
    "test:smoke:all": "playwright test tests/e2e/1-smoke --reporter=html --reporter=line",
    "test:pages": "playwright test tests/e2e/2-pages --reporter=html --reporter=line",
    "test:flows": "playwright test tests/e2e/3-flows --reporter=html --reporter=line",
    "test:e2e": "npm run test:smoke:all && npm run test:pages && npm run test:flows",
    "test:e2e:parallel": "playwright test tests/e2e",
    "test:playwright": "playwright test",
    "test:all": "npm run test:jest && npm run test:e2e",
    "test:quick": "npm run test:jest && npm run test:smoke",
    "test:newman": "newman run postman/collections/mvp-event-toolkit-api.json -e postman/environments/mvp-event-toolkit-dev.json -r cli,json,html --reporter-html-export newman-reports/report.html --reporter-json-export newman-reports/report.json",
    "test:newman:smoke": "newman run postman/collections/mvp-event-toolkit-api.json -e postman/environments/mvp-event-toolkit-dev.json --folder System -r cli",
    "test:newman:forms": "newman run postman/collections/mvp-event-toolkit-api.json -e postman/environments/mvp-event-toolkit-dev.json --folder 'Forms Templates' -r cli",
    "test:newman:flow": "newman run postman/collections/mvp-event-toolkit-flows.json -e postman/environments/mvp-event-toolkit-dev.json -r cli,json,html --reporter-html-export newman-reports/flow-report.html --reporter-json-export newman-reports/flow-report.json",
    "test:api:all": "npm run test:newman && npm run test:api",
    "lint": "eslint '**/*.{js,gs}' --ext .js,.gs",
    "lint:fix": "eslint '**/*.{js,gs}' --ext .js,.gs --fix",
    "format": "prettier --write '**/*.{js,gs,html,json,md}'",
    "push": "clasp push",
    "pull": "clasp pull",
    "deploy": "clasp deploy",
    "deploy:test": "./deploy-and-get-urls.sh",
    "open": "clasp open",
    "logs": "clasp logs",
    "verify-deployment": "./verify-deployment.sh"
  },
  "keywords": [
    "events",
    "sponsors",
    "analytics",
    "google-apps-script",
    "multi-tenant"
  ],
  "author": "Zeventbooks",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@playwright/test": "^1.56.1",
    "@types/google-apps-script": "^1.0.83",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "newman": "^6.1.0",
    "newman-reporter-html": "^1.0.5",
    "playwright": "^1.40.0",
    "prettier": "^3.1.1"
  }
}
