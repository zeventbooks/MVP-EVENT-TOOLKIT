{
  "name": "mvp-event-toolkit",
  "version": "1.3.0",
  "description": "Multi-tenant event management system with sponsor tracking and analytics (Zeventbook)",
  "main": "Code.gs",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:contract": "jest --testMatch='**/tests/contract/**/*.test.js'",
    "test:jest": "jest --coverage",
    "test:smoke": "playwright test tests/smoke",
    "test:e2e": "playwright test tests/e2e",
    "test:playwright": "playwright test",
    "test:all": "npm run test:jest && npm run test:playwright",
    "lint": "eslint '**/*.{js,gs}' --ext .js,.gs",
    "lint:fix": "eslint '**/*.{js,gs}' --ext .js,.gs --fix",
    "format": "prettier --write '**/*.{js,gs,html,json,md}'",
    "push": "clasp push",
    "pull": "clasp pull",
    "deploy": "clasp deploy",
    "open": "clasp open",
    "logs": "clasp logs",
    "verify-deployment": "./verify-deployment.sh"
  },
  "keywords": [
    "events",
    "sponsors",
    "analytics",
    "google-apps-script",
    "multi-tenant"
  ],
  "author": "Zeventbooks",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@playwright/test": "^1.56.1",
    "@types/google-apps-script": "^1.0.83",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.1"
  }
}
